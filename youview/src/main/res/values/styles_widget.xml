<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--最外层的包裹布局-->
    <style name="LayoutOuter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:fitsSystemWindows">true</item>-->
        <!--<item name="android:clipToPadding">true</item>-->
        <!--<item name="android:background">@color/colorPrimary</item>-->
    </style>
    <!--大按钮-->
    <style name="BigButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/titlebar_height</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--大按钮 圆-->
    <style name="BigButton.Round">
        <item name="android:background">@drawable/color_primary_round</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--大按钮 圆环-->
    <style name="BigButton.Ring">
        <item name="android:background">@drawable/color_primary_ring</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--分割线-->
    <style name="DividerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CheckBox.tickCheckBox">
        <item name="android:background">@drawable/tick_checkbox</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">@dimen/checkbox_text</item>
    </style>
    <style name="MyEditText">
        <item name="colorControlNormal">@color/gray_text</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>
